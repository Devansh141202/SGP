    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: sans-serif;
        }

        .bg {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background-color: white;
            width: 400px;
            height: 500px;
            opacity: 0.8;
        }

        .details {
            width: 280px;
            position: absolute;
            top: 50%;
            left: 28%;
            height: 550px;
            transform: translate(-50px, -50%);
            color: white;
        }

        .details h1 {
            float: center;
            text-align: center;
            font-size: 30px;
            border-bottom: 6px solid white;
            margin-bottom: 10%;
            padding: 13px 0;
        }

        .textbox {
            width: 100%;
            overflow: hidden;
            font-size: 20px;
            padding: 4px 0;
            margin: 8px 0;
            border-bottom: 1px solid white;
        }

        .textbox i {
            width: 26px;
            float: left;
            text-align: center;
        }

        .textbox input {
            border: none;
            outline: none;
            background: none;
            color: white;
            font-size: 18px;
            width: 80%;
            float: left;
            margin: 0 10px;
        }

        .btn {
            width: 100%;
            background: none;
            background-color: white;
            color: black;
            padding: 5px;
            font-size: 18px;
            cursor: pointer;
            margin: 8px;
        }

        .btn:hover {
            transform: scale(1.1);
        }

        .heading {
            font-size: 50px;
            color: white;
            position: absolute;
            top: 10%;
            left: 50%;
            transform: translate(-50%, -50%);
        }

        .b1 {
            width: 400px;
            height: 600px;
            background-color: black;
            opacity: 0.7;
            position: absolute;
            top: 80px;
            right: 570px;
        }
    </style>

    <title>Sign up</title>

<body>
    <div class="img">
        <img src="https://i.pinimg.com/originals/9f/e6/07/9fe60746de7399c327afca4be28f98c6.png" width="100%"
            height="792px" style="opacity: 0.7" />
        <div class="b1">
            <div class="details">
                <h1>Sign up</h1>
                <div class="textbox ">
                    <input type="text" placeholder="First Name" name="" value="">
                </div>
                <br>
                <div class="textbox ">
                    <input type="text" placeholder="Last Name" name="" value="">
                </div>
                <br>
                <div class="textbox ">
                    <i class="fa fa-mail" aria-hidden="true"></i>
                    <input type="text" placeholder="Mail ID" name="" value="">
                </div>
                <br>
                <div class="textbox ">
                    <input type="password" placeholder="Create New Password" name="" value="">
                </div>
                <br>
                <div class="textbox ">
                    <input type="password" placeholder="Confirm Password" name="" value="">
                </div>
                <br>
                <input class="btn" type="button" name="" value="Sign up">
                <br>

            </div>
        </div>
    </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ"
